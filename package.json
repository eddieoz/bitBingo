{
  "name": "bitraffle",
  "version": "1.0.0",
  "description": "A trustless, automated, blockchain-based raffle system",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "bitcoin",
    "blockchain",
    "raffle",
    "trustless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "all": "0.0.0",
    "bech32": "^2.0.0",
    "bitcoinjs-lib": "^6.1.7",
    "ipfs-http-client": "^60.0.1"
  }
}
