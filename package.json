{
  "name": "bitBingo",
  "version": "1.0.0",
  "description": "A trustless, automated, Bitcoin-based raffle system",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "cd server && pnpm run dev",
    "client": "cd client && pnpm start",
    "install-all": "pnpm install && cd server && pnpm install && cd ../client && pnpm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "bitcoin",
    "blockchain",
    "raffle",
    "trustless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@scure/bip32": "^1.6.2",
    "all": "0.0.0",
    "bech32": "^2.0.0",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "bs58": "^6.0.0",
    "ipfs-http-client": "^60.0.1",
    "tiny-secp256k1": "^2.2.3"
  },
  "packageManager": "pnpm@8.15.4"
}
